@model IEnumerable<WebBja.Models.Comentario>

@{
    ViewData["Title"] = "Index";
}

<p>
    <a class="btn btn-warning float-left" asp-action="Create">Create New</a>
</p><div id="comentarios">

    @foreach (var item in Model)
    {

        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2">
                    <p>
                        <img src="~/plantilla/img/user.png" width="50px" height="50px">
                        <ba>@Html.DisplayFor(modelItem => item.Username)</ba>
                    </p>
                    <p>
                        <bd> @Html.DisplayFor(modelItem => item.Fecha)</bd>
                    </p>
                    <h4>

                        @Html.DisplayFor(modelItem => item.Tema)

                    </h4>
                    <p class="bq">" @Html.DisplayFor(modelItem => item.Texto)"</p>
                </div>

            </div>
            <!-- /row -->
        </div>


        <hr />


    }
</div>